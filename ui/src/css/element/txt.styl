.txt
    display: inline-block
    width: 48px
    height: 48px
    line-height: 48px
    text-align: center
    background-color: #0ae
    color: #fff

.txt-border
    display: inline-block
    width: 48px
    height: 48px
    line-height: 48px
    border: solid 1px #0ae
    padding: 3px
    vertical-align: bottom

.txt-border .txt
    display: block
    width: 100%
    height: 100%
    line-height: 40px

.txt span
    font-size: 12px


.txt-border.txt-lg
    padding: 5px

.txt-lg
    width: 128px
    height: 128px
    line-height: 128px
    font-size: 36px


.txt-lg .txt
    width: 116px
    height: 116px
    line-height: 116px


.txt-lg strong
    font-size: 80px
    font-weight: normal


.txt-border.txt-md
    padding: 4px


.txt-md
    width: 64px
    height: 64px
    line-height: 64px
    font-size: 20px


.txt-md .txt
    width: 54px
    height: 54px
    line-height: 54px


.txt-md strong
    font-size: 36px
    font-weight: normal


.txt-border.txt-sm
    padding: 2px

.txt-sm
    width: 32px
    height: 32px
    line-height: 32px

.txt-sm .txt
    width: 26px
    height: 26px
    line-height: 26px

.txt-border.txt-xs
    padding: 1px


.txt-xs
    width: 16px
    height: 16px
    line-height: 16px
    font-size: 12px


.txt-xs .txt
    width: 12px
    height: 12px
    line-height: 12px
    font-size: 12px
