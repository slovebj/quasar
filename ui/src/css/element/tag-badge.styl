.tag
    font-size: 75%
    border-radius: .25em
    background: #999
    padding: .1em .5em .2em
    color: #fff

.badge
    display: inline-block
    min-width: 10px
    padding: 3px 7px
    font-size: 12px
    line-height: 1
    color: #fff
    text-align: center
    white-space: nowrap
    vertical-align: baseline
    background-color: #999
    border-radius: 2em

.badge:empty
    display: none

.badge-corner
    position: relative


.badge-corner .badge
    position: absolute
    right: -10px
    top: -9px
    font-weight: normal
    cursor: pointer

.badge-d1
    position: absolute
    right: 0
    top: 0
    width: 10px
    height: 10px
    border: 2px solid #fff
    border-radius: 100%

.badge-d0
    position: absolute
    right: 0
    bottom: 0
    width: 10px
    height: 10px
    border: 2px solid #fff
    border-radius: 100%